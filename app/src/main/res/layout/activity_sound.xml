<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313A43"
    android:backgroundTint="#313A43"
    tools:context=".sound">

    <ImageView
        android:id="@+id/Dog"
        android:layout_width="183dp"
        android:layout_height="159dp"
        android:layout_marginTop="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/Golub1"
        app:layout_constraintEnd_toStartOf="@+id/Cat1"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194"
        app:srcCompat="@drawable/dog" />

    <ImageView
        android:id="@+id/Cat1"
        android:layout_width="178dp"
        android:layout_height="159dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/Golub1"
        android:layout_width="191dp"
        android:layout_height="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568"
        app:srcCompat="@drawable/golub" />
</androidx.constraintlayout.widget.ConstraintLayout>